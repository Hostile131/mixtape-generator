<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Mixtape generator:</h3>

    <form class="form new-media-form">
      <div class="form-group">
        <label for="media-name">media name:</label>
        <input class="form-input" type="text" id="media-name" name="media-name" />
      </div>
      <div class="form-group">
        <label for="media-albums">media albums ($):</label>
        <input class="form-input" type="text" id="media-albums" name="media-albums" />
      </div>
      <div class="form-group">
        <label for="media-lyrics">lyrics:</label>
        <textarea class="form-input" id="media-lyrics" name="lyrics"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if media.length}}
  <div class="col-md-6 media-list">


    {{#each media as |media|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/media/{{media.id}}">{{media.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{media.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
